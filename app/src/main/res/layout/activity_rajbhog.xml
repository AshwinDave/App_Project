<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rajbhog">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/rajbhog"
            android:layout_marginTop="-150dp"
            android:layout_height="350dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:text="राज भोग"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#4CAF50"
            android:text="स्टॉक में उत्पाद"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10sp"
            android:text="प्रति पीस 25 रु"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#E91E63"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="10sp"
            android:text="शाही काजू अच्छाई की चिकनी और मलाईदार हीरे के आकार के स्लाइस। श्याम जी की काजू कतली को गुणवत्ता वाले काजू, गाढ़े दूध और खाने योग्य चांदी की पन्नी के साथ बनाया जाता है। यह उत्सव पसंदीदा अपने प्रियजनों के साथ साझा करने के लिए किया गया एक अभद्र व्यवहार है।"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="मात्रा प्रति किलो दर्ज करें"
            android:textColor="#F44336"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="130sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:id="@+id/decrease"
                android:onClick="decreaseInteger"
                android:text="-"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/integer_number"
                android:layout_marginTop="16dp"
                android:text="1"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:id="@+id/increase"
                android:onClick="increaseInteger"
                android:text="+"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:text="आर्डर दें"
            android:id="@+id/order"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</ScrollView>