<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Homepage">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:src="@drawable/logo"
        android:layout_height="80dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="-65dp"
        android:text="Login" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/poster"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="111dp"
            android:layout_height="112dp"
            android:layout_marginLeft="12sp"
            android:src="@drawable/mobile" />

        <ImageView
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="24sp"
            android:src="@drawable/electronics" />

        <ImageView
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="21sp"
            android:src="@drawable/tv" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Mobiles and Tablets"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Electronics"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="28sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="TV and Appliances"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginLeft="31sp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="114dp"
            android:layout_height="128dp"
            android:layout_marginLeft="12sp"
            android:src="@drawable/home_essential" />

        <ImageView
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="24sp"
            android:src="@drawable/furniture" />

        <ImageView
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="21sp"
            android:src="@drawable/fashion" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="5dp"
            android:text="Home Essentials"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55sp"
            android:layout_marginTop="5dp"
            android:text="Furniture"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="5dp"
            android:text="Fashion"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
</ScrollView>